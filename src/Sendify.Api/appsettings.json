{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Database": {
    "DatabaseType": "MongoDB",
    "ConnectionStrings": "mongodb://sendify:pass@localhost:27017/?authSource=Sendify",
    "DatabaseName": "Sendify"
  },
  "AllowedHosts": "*",
  "JWT": {
    "ValidAudience": "https://localhost",
    "ValidIssuer": "https://localhost",
    "Secret": "YOUR_SECRET"
  },
  "Password": {
    "Salt": "YOUR_SALT"
  },
  "Kestrel": {
    "Limits": {
      "MaxRequestBodySize": 524288
    }
  }
}